<style type="text/css">
    *{  color: #717375; }
    p{ margin: 0; padding: 4mm 0 0 0; }
    hr{ background: #717375; height: 1px; border:none; }
    table{ border-collapse: collapse; width: 100%; color: #717375; font-size: 12pt; font-family: helvetica; line-height: 6mm;}
    em{font-size: 9pt;}
    h1{color: #000; margin: 0; padding: 0;}
    td.right{ text-align: right; }
    strong {color: #000;}
    table.border td{ border: 1px solid #CFD1D2; padding: 3mm 1mm; }
    table.border th,td.black{ background: #000; color: #FFF; font-weight: normal; border: solid 1px #FFF; padding: 1mm 1mm; text-align: left; }
    td.noborder{ border:none; }
</style>
<page backtop="20mm" backleft="10mm" backright="10mm" backbottom="30mm" footer="page; date;">
    <page_footer>
        <hr />
        <h1>Participants</h1>
        <p>Date: {{ "now"|date("m/d/Y") }}</p>
        {#<p>Signature et cachet de l'entreprise,précédés de la mention manuscrite "Bon pour accord" </p>#}
        <p>&nbsp;</p>
        <p>&nbsp;</p>
    </page_footer>

    <table style="vertical-align: top; ">
        <tr>
            <td style="width:75%;">
                <strong>Souk El Medina </strong><br>
                Nom Evenement: {{ Evenement.nomevenement  }}<br>
                Adresse: Tunis<br>



            </td>

            <td style="width:25%;"><strong> <br>{{ Evenement.iduser.nom }} {{ Evenement.iduser.prenom }}</strong><br>
                {#Adresse: Nabeul,Tunisie#}

            </td>
        </tr>
    </table>
    <br><br><br>

    <table class="border">
        <thead>
        <tr>

            <th style="width:11%;">ID</th>
            <th style="width:39%;">Nom & Prenom</th>
            <th style="width:38%;">Email</th>
            <th style="width:12%;">N° Telephone</th>

        </tr>
        </thead>
        <tbody>

        {% for participant in Particiapants %}

            <tr>

                <td>{{ participant.idevenement.id }}</td>
                <td>{{ participant.iduser.nom }} {{ participant.iduser.prenom }}</td>
                <td>{{ participant.iduser.email }}</td>
                <td> {{  participant.iduser.numerodutelephone }}</td>


            </tr>
        {% endfor %}

        </tbody>
    </table>
</page>




