    <table>
        <tbody>
            <tr>
                <th>Id: </th>
                <td style="outline: none;
                                border: 1px solid #DBDBDB;
                                padding: 10px 10px 10px 10px;
                                font-size: 14px;
                                color: #999;
                                display: block;
                                width: 100%;">{{ promotion.idpromotion }}</td>
            </tr>
            <tr>
                <th>Titre: </th>
                <td style="outline: none;
                                border: 1px solid #DBDBDB;
                                padding: 10px 10px 10px 10px;
                                font-size: 14px;
                                color: #999;
                                display: block;
