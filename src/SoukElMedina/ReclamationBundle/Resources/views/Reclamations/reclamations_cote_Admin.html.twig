{% extends"baseAdmin.html.twig" %}

{% block body %}
    <body class="hold-transition skin-blue sidebar-mini">
        <div class="content-wrapper" style="margin-left: -0.5%">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Liste des réclamations clients
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">Tables</a></li>
                    <li class="active">Réclamations</li>
                </ol>
            </section><br/>
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title"> </h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <strong><i>Rechercher les réclamations : </i></strong><br/><br/>
                                <div class="col-lg-4">
                                    <ul style="list-style-type: none; display: inline">
                                        <li>
                                            <ul style="display: inline; list-style-type: none">
                                                    <a href="{{ path('reclamations_consultationAdmin2') }}">
                                                        <li id="3jours"><span class="glyphicon glyphicon-chevron-right"></span> 3 derniers jours</li>
                                                    </a>
                                                    <br/>
                                                    <a href="{{ path('reclamations_consultationAdmin3') }}">
                                                        <li><span class="glyphicon glyphicon-chevron-right"></span> semaine dernière</li>
                                                    </a>
                                                    <br/>
                                                    <a href="{{ path('reclamations_consultationAdmin4') }}">
                                                        <li><span class="glyphicon glyphicon-chevron-right"></span> mois dernier</li>
                                                    </a>
                                                </ul>
                                        </li>
                                    </ul><br/><br/>
                                </div>
                                <div class="col-lg-4">
                                    <ul style="list-style-type: none; display: inline">
                                        <li>
                                            <ul style="list-style-type: none; display: inline">
                                                <a href="{{ path('reclamations_consultationAdmin5') }}">
                                                    <li><span class="glyphicon glyphicon-chevron-right"></span> Réclamations vendeur</li>
                                                </a>
                                                <a href="{{ path('reclamations_consultationAdmin6') }}">
                                                    <li><span class="glyphicon glyphicon-chevron-right"></span> Réclamations admin</li>
                                                </a>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>

                                <table id="example1" class="col-xs-9 table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>N° réclamation</th>
                                        <th>Type de réclamation</th>
                                        <th>Objet de la réclamation</th>
                                        <th>Nom du client</th>
                                        <th>Magasin concerné</th>
                                        <th>Date d'envoi</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for reclamation in reclamations %}
                                        <a href="#"> <tr>
                                        <td><a href="{{ path('reclamation_show_admin', { 'id': reclamation.idreclamation }) }}">{{ reclamation.idreclamation }}</a></td>
                                        <td>{{ reclamation.typereclamation }}</td>
                                        <td>{{ reclamation.objetreclamation }}</td>
                                        <td>{{ reclamation.iduser.prenom }} {{ reclamation.iduser.nom }}</td>
                                        <td>{% if(reclamation.idmagasin != null) %}
                                            {{ reclamation.idmagasin.nommagasin }}
                                        {% else %}/
                                        {% endif %}</td>
                                        <td>{{ reclamation.dateenvoireclamation|date('Y-m-d H:i:s') }}</td>
                                    </tr></a>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->

                    </div>
                </div>
            </section>
        </div>
    </body>
{% endblock %}