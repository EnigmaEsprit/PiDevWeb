
{% extends"base.html.twig" %}


{% block body %}

    <!-- breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1">
                <li><a href="{{ path('souk_el_medina_pidev_homepage') }}"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
                <li class="active">Checkout Page</li>
            </ol>
        </div>
    </div>
    <!-- //breadcrumbs -->
    <!-- checkout -->
    <div class="checkout">
        <div class="container">

            <h2>My Bills<span>{{ totalfactures|length }} Bills</span></h2>
            <div class="clearfix"></div>
            <div class="checkout-right">

                <table class="timetable_sub">
                    <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Date</th>
                        <th>Price TTC</th>
                        <th>Action</th>


                    </tr>
                    </thead>
                    {% if factures|length == 0 %}
                        <tr>
                            <td colspan="4"> <center><strong>Aucune Facture Actuellement</strong></center> </td>
                        </tr>
                    {% endif %}
                    {% for facture in factures %}
                        <tr class="rem1">
                            <form action=""  method="get">
                                <td class="invert"> ref: {{ facture.reference }}</td>
                                <td class="invert"> {{ facture.datedecommande | date('d/m/Y') }}</td>
                                <td class="invert">{{  facture.prixtotal}} </td>
                                <td><a href="{{ path('souk_el_medina_panier_pdf_facture',{'id':facture.idcommande}) }}" target="_blank">
                                        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span></a>
                                <a><span class="glyphicon glyphicon-remove"></span></a></td>
                            </form>
                        </tr>

                    {% endfor %}


                    <div class="navigation">
                        {{ knp_pagination_render(factures) }}
                    </div>

                </table>
            </div>

                <div class="checkout-right-basket">
                    <a href="{{ path('souk_el_medina_panier_homepage') }}"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>Retour</a>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- //checkout -->

{% endblock %}