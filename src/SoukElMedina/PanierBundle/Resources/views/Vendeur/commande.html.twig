
{% extends"baseVendeur.html.twig" %}


{% block body %}

    <!-- breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1">
                <li><a href="{{ path('souk_el_medina_pidev_homepage') }}"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
                <li class="active">Checkout Page</li>
            </ol>
        </div>
    </div>
    <!-- //breadcrumbs -->
    <!-- checkout -->
    <div class="checkout">
        <div class="container">

            <h2>My Commands: <span>{{ totalcommandes|length }} Commands</span></h2>
            <div class="">
                <form action="#" method="post">
                    <input type="search" name="nom" id="nom"  placeholder="rechercher">
                    <input type="submit" value="valider">
                </form>
            </div>

            <div class="clearfix"></div>
            <div id="result"></div>
            <div class="checkout-right">

                <table class="timetable_sub">
                    <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Date</th>
                        <th>Client</th>
                        <th>Action</th>


                    </tr>
                    </thead>
                    {% if commandes|length == 0 %}
                        <tr>
                            <td colspan="4"> <center><strong>Aucune Facture Actuellement</strong></center> </td>
                        </tr>
                    {% endif %}
                    {% for commande in commandes %}
                        <tr class="rem1">
                            <form action=""  method="get">

                                <td class="invert">ref: {{ commande.reference }} </td>
                                <td class="invert"> {{ commande.datedecommande |date('d-m-Y h:i:s') }}</td>
                                <td class="invert">{{ commande.iduser.nom }}</td>
                                <td><a href="{{ path('souk_el_medina_panier_pdf_facture_vendeur',{'id':commande.idcommande}) }}" target="_blank">
                                        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span></a>
                                <a><span class="glyphicon glyphicon-remove"></span></a></td>
                            </form>
                        </tr>

                    {% endfor %}


                    <div class="navigation">
                        {{ knp_pagination_render(commandes) }}
                    </div>

                </table>
            </div>
            <script>
                $("#nom").keyup(
                    function () {
                        var nom = $('#nom').val();
                        var DATA = 'nom='+nom;
                        $.ajax({
                            type:"post",
                            url:"{{ path('souk_el_medina_panier_commande_vendeur') }}",
                            data :DATA,
                            success: function (data) {
                                console.log('data**  '+ JSON.stringify(data));


                                $("#result").html("<table  id='res' class='timetable_sub'> <tr><th>Reference</th><th>Date</th><th>Client</th><th>Action</th></tr></table>");

                                $.each(data,function (k,el) {


                                    console.log(el);
                                    $(".checkout-right").hide();

                                    // var route = Routing.generate('souk_el_medina_panier_pdf_facture_vendeur',{'id':el.idcommande});

                                    $('#res').append(
                                        "<tr>" +
                                        "<td>" + "Ref: "+el.reference + "</td>" +
                                        "<td>" + el.datedecommande + "</td>" +
                                        "<td>" + el.iduser.nom + "</td>" +
                                        "<td>" + + "</td>" +
                                        "</tr>");
                                });

                            }
                        });
                    });


            </script>

                </table>
            </div>


            <div class="checkout-right-basket">
                <a href="{{ path('souk_el_medina_panier_homepage') }}"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>Retour</a>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    </div>
    <!-- //checkout -->

{% endblock %}